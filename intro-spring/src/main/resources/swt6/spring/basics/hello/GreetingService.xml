<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="greetingService" class="swt6.spring.basics.hello.GreetingServiceImpl">
        <property name="message" value="Hello again SWT6 (Version 1)" />
    </bean>

    <bean id="const-greetingService" class="swt6.spring.basics.hello.GreetingServiceImpl">
        <constructor-arg value="do it with constructor"/>
    </bean>

</beans>